<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerView">
    
    <Spinner
        android:popupBackground="@android:color/holo_orange_dark"
        android:background="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:id="@+id/list_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/list_autocomplete"
        android:layout_marginTop="140dp"
        android:hint="Search Technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <MultiAutoCompleteTextView
        android:id="@+id/list_multiautocomplete"
        android:layout_marginTop="240dp"
        android:hint="Search Multiple Technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>