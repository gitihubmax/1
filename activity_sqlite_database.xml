<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SqliteDatabaseActivity">

    <EditText
        android:id="@+id/sqlite_roll"
        android:maxLength="5"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Roll No."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:id="@+id/sqlite_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/sqlite_mark"
        android:maxLength="3"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/sqlite_insert"
            android:layout_marginHorizontal="5dp"
            android:text="Insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/sqlite_update"
            android:layout_marginHorizontal="5dp"
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/sqlite_delete"
            android:layout_marginHorizontal="5dp"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/sqlite_show"
            android:layout_marginHorizontal="5dp"
            android:text="Show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/sqlite_search"
            android:layout_marginHorizontal="5dp"
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    
    <ListView
        android:id="@+id/sqlite_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>